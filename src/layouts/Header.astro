---
const socialLinks = [
  { name: "Facebook", url: "https://www.facebook.com/Gragrupoderescatesyadopcionesencastellon/?locale=es_ES", icon: "facebook.svg" },
  { name: "Instagram", url: "https://www.instagram.com/gragrupoderescatesyadopciones/?hl=es", icon: "instagram.svg" },
  { name: "Whatsapp", url: "https://wa.me/34674309206", icon: "whatsapp.svg" },
  { name: "Teaming", url: "https://www.teaming.net/gragrupoderescatesyadopcionescastellon?lang=es_ES", icon: "teaming.webp"}
